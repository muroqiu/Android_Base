<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTest"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:paddingLeft="20dp" />

        <Button
            android:id="@+id/btnLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:onClick="onBtnLogClick"
            android:paddingLeft="20dp"
            android:text="日志测试" />

        <Button
            android:id="@+id/btnTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:onClick="onBtnTestClick"
            android:paddingLeft="20dp"
            android:text="16进制转字符串" />

        <Button
            android:id="@+id/btnTestWX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:onClick="onBtnTestWXClick"
            android:paddingLeft="20dp"
            android:text="解密微信数据库" />

        <Button
            android:id="@+id/btnDecryptedWX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:onClick="onBtnDecryptedWXClick"
            android:paddingLeft="20dp"
            android:text="解密微信数据库-全库" />

        <Button
            android:id="@+id/btnDecryptedWXContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:onClick="onBtnDecryptedWXContactClick"
            android:paddingLeft="20dp"
            android:text="解密微信数据库-联系人" />


        <Button
            android:id="@+id/btnDeviceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:onClick="onBtnDeviceInfoClick"
            android:paddingLeft="20dp"
            android:text="设备信息" />

        <TextView
            android:id="@+id/txtTest"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:drawablePadding="20dp"
            android:gravity="bottom"
            android:paddingLeft="20dp" />

    </LinearLayout>
</ScrollView>